.pull-right: a.btn.btn-default(ui-sref="config.order_type({ order_type_id: 'new' })") Add Order Type
.clearfix

table.table
  thead: tr
    th ID
    th Name
    th &nbsp;
  tbody: tr(ng-repeat="type in orderTypes")
    td {{ type.id }}
    td {{ type.name }}
    td
      .btn-group.pull-right
        a.btn.btn-default.btn-xs(ui-sref="config.order_type({ order_type_id: {{ type.id }} })"): i.fa.fa-edit.fa-fw
        a.btn.btn-danger.btn-xs(ng-click="remove(type)"): i.fa.fa-times.fa-fw
.modal-header
	h3.modal-title New Cash Report

.modal-body
	form.form-horizontal(name="cashReportForm")
		.form-group
			label.control-label.col-sm-4 Date
			.col-sm-6
				input.form-control(type="date" ng-model="report.date" required)
		.form-group(ng-repeat="category in categories")
			label.control-label.col-sm-4 {{ category }}
			.col-sm-6.col-md-6
				input.form-control(ng-model="report.data[category]" type="number" step="any")
		.form-group
			.col-sm-6.col-md-6.col-sm-offset-4.col-md-offset-4
				button.btn.btn-success(ng-disabled="cashReportForm.$invalid" ng-click="createReport(report)") Create